category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:     App,
                       API,
                       API.Invitation,
                       API.Pagination,
                       API.Restaurant,
                       API.User,
                       Server,
                       Server.Config,
                       Server.Invitation,
                       Server.Restaurant,
                       Server.User,
                       Invitation,
                       Restaurant,
                       User,
                       Util.Crypto,
                       Util.Neo,
                       Util.JWT,
                       Util.Server
  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.8 && <4.9,
                       servant,
                       servant-server,
                       text,
                       jwt,
                       time,
                       containers,
                       wai,
                       aeson,
                       warp,
                       mtl,
                       either,
                       haskell-neo4j-client,
                       unordered-containers,
                       bytestring,
                       bcrypt,
                       transformers,
                       bytestring-conversion,
                       ConfigFile
  hs-source-dirs:      src
  ghc-options:         -fhpc
  default-language:    Haskell2010


executable PhoBuddies-Servant
  main-is:             Main.hs
  build-depends:       base >= 4.8 && <4.9,
                       PhoBuddies-Servant
  hs-source-dirs:      app
  default-language:    Haskell2010

test-suite phobuddies-hspec
  ghc-options:         -fhpc
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test src
  main-is:             Spec.hs
  build-depends:       base,
                       hspec,
                       hspec-wai,
                       hspec-wai-json,
                       http-types,
                       QuickCheck,
                       wai,
                       wai-extra,
                       directory,
                       text,
                       bytestring,
                       haskell-neo4j-client,
                       servant,
                       servant-server,
                       jwt,
                       time,
                       containers,
                       aeson,
                       warp,
                       mtl,
                       either,
                       unordered-containers,
                       bcrypt,
                       transformers,
                       bytestring-conversion,
                       ConfigFile
  default-language:    Haskell2010

test-suite phobuddies-hlint
  default-language:    Haskell2010
  hs-source-dirs:      test
  main-is:             HLint.hs
  type:                exitcode-stdio-1.0
  build-depends:       base
                     , hlint <  2